<div class="container mx-auto p-4">
  <h1 class="text-3xl text-center font-bold mb-4">URL Shortener</h1>

  <%= form_with model: @url, url: urls_path, method: :post, local: true do |form| %>
    <div class="flex space-x-2">
      <%= form.text_field :original, class: "border p-2 rounded w-full", placeholder: "Enter URL" %>
      <%= form.submit "Shorten", class: "bg-green-500 text-white p-2 rounded" %>
    </div>
  <% end %>

  <% if @url.persisted? %>
    <div class="mt-4 p-4 bg-green-100 rounded">
      <p>Original URL: <%= @url.original %></p>
      <p>Short URL: <%= url_for(@url.short) %></p>
    </div>
  <% end %>
</div>
